    <script>
        function moveButton(button) {
            let x = Math.random() * (window.innerWidth - button.clientWidth);
            let y = Math.random() * (window.innerHeight - button.clientHeight);
            button.style.left = x + 'px';
            button.style.top = y + 'px';
        }

        function showLoveImage() {
            document.getElementById('loveImage').classList.remove('hidden');
            document.getElementById('catImage').classList.remove('hidden');
            alert('¡Sabía que dirías que sí, Te amo mi princesa! ❤️');
        }
    </script>
